issn = {0004-637X},
journal = {The Astrophysical Journal},
number = {1},
pages = {262--289},
title = {{Collapsars: Gamma‐Ray Bursts and Explosions in “Failed Supernovae”}},
volume = {524},
year = {1999}
}
@article{Shapiro-Albert2019,
