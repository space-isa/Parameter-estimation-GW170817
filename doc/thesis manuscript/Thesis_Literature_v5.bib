journal = {Mon. Not. R. Astron. Soc},
keywords = {gravitational waves-techniques,individual-stars,miscellaneous-gamma-ray burst,neutron},
pages = {2668--2673},
title = {{The Swift short gamma-ray burst rate density: implications for binary neutron star merger rates}},
url = {https://academic.oup.com/mnras/article/425/4/2668/1076724},
volume = {425},
year = {2012}
}
