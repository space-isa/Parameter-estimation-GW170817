title = {{Characterizing Astrophysical Binary Neutron Stars with Gravitational Waves}},
url = {https://iopscience.iop.org/article/10.3847/2041-8213/abb6ea https://iopscience.iop.org/article/10.3847/2041-8213/abb6ea/meta},
volume = {902},
year = {2020}
